{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2020", "DOM","ESNext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["chrome"],
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "./dist",
    "noEmit": false,  // Change to false to enable file emission
    "moduleResolution": "node"
  },
  "include":  ["src/**/*"]
}
